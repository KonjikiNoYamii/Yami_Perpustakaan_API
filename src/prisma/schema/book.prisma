model Book {
  id          String   @id @default(uuid())
  nama        String
  harga       Int
  deskripsi   String
  stok        Int
  coverUrl    String?

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  loanItems   LoanItem[] // ⬅️ RELASI MANY-TO-MANY

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?
}
